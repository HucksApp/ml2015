@import "colors"

body
  padding: 10px

body > nav
  width: 100%
  height: 60px
  top: initial
  bottom: 0
  display: -webkit-flex
  display: flex

  > a
    width: auto
    -webkit-flex: 0 0 16.6666666666666%
    flex: 0 0 16.6666666666666%
    border-bottom: none
    border-right: 1px solid accent-hover

    &:hover
      width: auto

#this-week
  min-width: initial

#home
  padding-top: 20px

  > h1
    text-align: center

    > span
      &, .department
        margin-top: 10px
        font-size: 12px
      .department
        margin-top: 5px
        display: block


#lectures > section
  > h1
    font-size: 24px

  .date
    display: inline-block

  .topics, .reading
    padding-right: 0

  > section
    display: block

    &:not(:last-child)
      margin-bottom: 20px
      border-bottom: 2px solid gray

    > div
      display: block
      margin-bottom: 25px
      padding-top: 0

      &:first-of-type
        padding-left: 0
        margin-bottom: 15px

        h1
          margin-bottom: 0
          font-size: 18px

    .reading, .slides
      h1
        padding-left: 20px

    .icon::before
      top: 0
      left: 0

      margin-top: -6px

      font-size: 14px
