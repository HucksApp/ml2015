@import "colors"

#lectures > section > h1
  font-size: 24px

#lectures > section > section
  display: block
  margin: 0px 20px

  &.lecture
    margin-bottom: 20px
    border-bottom: 2px solid gray

  > div
    display: block
    margin-bottom: 20px
    padding-top: 0

    &:first-of-type
      padding-left: 0
      margin-bottom: 15px

      h1
        margin-bottom: 0
        font-size: 18px

  .reading, .slides
    h1
      padding-left: 20px

  .icon::before
    top: 0
    left: 0

    margin-top: -6px

    font-size: 14px

#people
  > section.multiple-people ul
    display: block
