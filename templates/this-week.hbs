<section id="this-week">
    <h1>This week</h1>

    <div class="week-summary">
        <section>
            <h1><a href="#lectures">Topics</a></h1>
            <ul>
                {{#each topics}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </section>
        <section>
            <h1><a href="#lectures">Reading</a></h1>
            {{> _reading }}
        </section>
        <section class="assignment">
            {{#with assignment }}
                <h1><a href="#assignments">{{Label}}</a></h1>

                <p>{{{Description}}}</p>

                {{> _assignment-details }}
            {{/with}}
        </section>
    </div>
</section>
